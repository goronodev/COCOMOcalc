<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="COCOMO Calculator"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Выбор модели COCOMO -->
    <TextView
        android:id="@+id/tvModelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Модель COCOMO"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <Spinner
        android:id="@+id/spinnerModel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/tvModelLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Тип проекта -->
    <TextView
        android:id="@+id/tvProjectTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тип проекта"
        app:layout_constraintTop_toBottomOf="@id/spinnerModel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/spinnerProjectType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/tvProjectTypeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Ввод KLOC -->
    <TextView
        android:id="@+id/tvKlocLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Размер ПО (KLOC)"
        app:layout_constraintTop_toBottomOf="@id/spinnerProjectType"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etKloc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Например: 25"
        android:minHeight="48dp"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/tvKlocLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Cost Drivers (для Intermediate COCOMO) -->
    <LinearLayout
        android:id="@+id/layoutCostDrivers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="411dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/etKloc"
        app:layout_constraintBottom_toTopOf="@id/btnCalculate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Cost Drivers (Intermediate COCOMO)"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Product Attributes -->
        <include layout="@layout/layout_cost_driver_group_product" />

        <!-- Hardware Attributes -->
        <include layout="@layout/layout_cost_driver_group_hardware" />

        <!-- Personnel Attributes -->
        <include layout="@layout/layout_cost_driver_group_personnel" />

        <!-- Project Attributes -->
        <include layout="@layout/layout_cost_driver_group_project" />

    </LinearLayout>


    <!-- Кнопка расчёта -->
    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Рассчитать"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutCostDrivers"
        app:layout_constraintBottom_toTopOf="@id/tvResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Результаты -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Результаты расчёта появятся здесь"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnCalculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>